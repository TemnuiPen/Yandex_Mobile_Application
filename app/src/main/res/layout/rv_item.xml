<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_for_recycleView_64"
    tools:ignore="NotSibling">

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:layout_marginRight="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
    </ImageView>

    <TextView
        android:id="@+id/company_code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/front_large_24"
        android:layout_toRightOf="@+id/company_image"
        android:layout_toEndOf="@+id/company_image"
        android:layout_marginLeft="@dimen/front_normal_16"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:gravity="top">
    </TextView>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_small_8"
        android:layout_toRightOf="@+id/company_image"
        android:layout_toEndOf="@+id/company_image"
        android:layout_marginTop="@dimen/spacing_very_huge_48"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_marginStart="@dimen/spacing_normal_16">
    </TextView>


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/front_large_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:layout_marginRight="@dimen/spacing_normal_16"
        >
    </TextView>

    <TextView
        android:id="@+id/price_change"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/front_small_12"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spacing_very_huge_48"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:layout_marginRight="@dimen/spacing_normal_16"
        >

    </TextView>

</RelativeLayout>

